{
  "name": "node-boilerplate",
  "description": "NodeJS boilerplate with: TypeScript, ESlint, Prettier & Jest",
  "version": "1.0.0",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint:scripts": "eslint './**/*.{ts,tsx}' --color --fix",
    "lint": "npm run lint:scripts",
    "start": "node ./build/index",
    "test": "jest --colors --verbose=true --coverage --runInBand --watchAll=false",
    "test:watch": "npm test -- --watchAll"
  },
  "author": "Andy Meek",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.3.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
